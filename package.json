{
  "name": "frame",
  "productName": "Frame",
  "version": "1.0.0",
  "description": "Frame - Project Management IDE for Claude Code",
  "main": "src/main/index.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "build": "esbuild src/renderer/index.js --bundle --outfile=dist/renderer.js --platform=node --external:electron",
    "watch": "esbuild src/renderer/index.js --bundle --outfile=dist/renderer.js --platform=node --external:electron --watch",
    "start": "npm run build && electron .",
    "dev": "npm run watch & electron .",
    "structure": "node scripts/update-structure.js",
    "structure:changed": "node scripts/update-structure.js --changed",
    "prepare": "git config core.hooksPath .githooks || true",
    "dist": "npm run build && electron-builder --mac --dir",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:unsigned": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac"
  },
  "keywords": [
    "electron",
    "terminal",
    "claude",
    "frame",
    "ide",
    "project-management"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "node-pty": "^1.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "build": {
    "appId": "com.frame.ide",
    "productName": "Frame",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": null
    },
    "dmg": {
      "title": "${productName} ${version}",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "index.html",
      "src/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**"
    ]
  }
}
